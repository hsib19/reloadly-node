{
  "name": "reloadly-node",
  "version": "1.0.0",
  "description": "Unofficial Node.js SDK for Reloadly APIs, enabling integration with mobile top-ups, gift cards, and airtime services.",
  "main": "index.js",
  "private": false,
  "scripts": {
    "build": "pnpm build:sdk",
    "build:sdk": "pnpm --filter reloadly-node build",
    "build:docs": "pnpm --filter reloadly-docs build",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "pnpm -r --if-present test",
    "test:cov": "pnpm -r --if-present test:cov",
    "typecheck": "pnpm -r --if-present typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "keywords": [
    "reloadly",
    "nodejs",
    "sdk",
    "api",
    "airtime",
    "topup",
    "giftcards",
    "mobile",
    "unofficial"
  ],
  "author": "Hasib Muharam",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript-eslint": "^8.50.1"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
