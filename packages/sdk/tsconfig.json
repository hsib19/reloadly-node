{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "module": "ESNext",
        "target": "ES2020",
        "baseUrl": "src",
        "paths": {
            "@client/*": [
                "client/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@errors/*": [
                "errors/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@constants/*": [
                "constants/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}
